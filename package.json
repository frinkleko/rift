{
  "name": "RIFT",
  "displayName": "不加空格？强迫症急救包",
  "version": "0.1.0",
  "description": "自动加空格外挂：为你的文字呼吸留白，自动在网页中所有的中文字和半形的英文、数字、符号之间插入空白，提升阅读体验。",
  "author": "goastwang0131@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.21.0",
    "@plasmohq/storage": "^1.13.0",
    "@remusao/url-match-patterns": "^1.2.0",
    "antd": "^5.19.3",
    "classnames": "^2.5.1",
    "plasmo": "0.89.4",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "rift-addon@goastwang0131.com"
      }
    }
  }
}
